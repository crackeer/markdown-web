{
    "admin": {
        "disabled": false,
        "listen": "0.0.0.0:2019",
        "enforce_origin": false,
        "origins": [
            ""
        ]
    },
    "apps": {
        "http": {
            "servers": {
                "static": {
                    "idle_timeout": 30000000000,
                    "listen": [
                        "0.0.0.0:80"
                    ],
                    "max_header_bytes": 10240000,
                    "read_header_timeout": 10000000000,
                    "routes": [
                        {
                            "match" : [
                                {
                                    "method" : ["POST", "PUT", "DELETE"],
                                    "header": {
                                        "proxy": [
                                            "upload2dir"
                                        ]
                                    }
                                }
                            ],
                            "handle" : [
                                {
                                    "handler" : "upload2dir",
                                    "file_server_root" : "./",
                                    "file_field_name" : "file"
                                }
                            ],
                            "terminal" : true
                        },
                        {
                            "match": [
                                {
                                    "header": {
                                        "proxy": [
                                            "storage"
                                        ]
                                    }
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "database",
                                    "driver": "sqlite",
                                    "dsn": "./sqlite.db"
                                }
                            ],
                            "terminal": true
                        },
                        {
                            "handle": [
                                {
                                    "handler": "file_server",
                                    "root": "./",
                                    "browse": {
                                        "template_file": ""
                                    }
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}